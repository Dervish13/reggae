#!/bin/sh

PROJECT_BIN_PATH=`dirname "${0}"`
PROJECT_ROOT=`dirname "${PROJECT_BIN_PATH}"`

help() {
    echo "Usage: $0 <action>"
    echo -n "  where action is 'init', 'network-init', 'cbsd-init'"
    echo ", 'master-init', 'register' or 'deregister'"
}

case "${1}" in
    init)
        shift
        /usr/local/share/reggae/scripts/init.sh ${@}
        break
        ;;
    network-init)
        shift
        /usr/local/share/reggae/scripts/network-init.sh ${@}
        break
        ;;
    cbsd-init)
        shift
        /usr/local/share/reggae/scripts/cbsd-init.sh ${@}
        break
        ;;
    master-init)
        shift
        /usr/local/share/reggae/scripts/master-init.sh ${@}
        break
        ;;
    register)
        shift
        /usr/local/share/reggae/scripts/register.sh register
        break
        ;;
    deregister)
        shift
        /usr/local/share/reggae/scripts/register.sh deregister
        break
        ;;
    get-config)
        shift
        /usr/local/share/reggae/scripts/get-config.sh ${@}
        break
        ;;
    *)
        help
        exit 1
        ;;
esac

