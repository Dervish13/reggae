#!/bin/sh

PROJECT_BIN_PATH=`dirname "${0}"`
PROJECT_ROOT=`dirname "${PROJECT_BIN_PATH}"`

help() {
    echo "Usage: $0 <action>" >&2
    echo "  where action is 'init', 'register' or 'deregister'"
}

case "${1}" in
    "init")
        shift
        "${PROJECT_BIN_PATH}/init.sh" ${@}
        break
        ;;
    "register")
        shift
        "${PROJECT_BIN_PATH}/register.sh" register
        break
        ;;
    "deregister")
        shift
        "${PROJECT_BIN_PATH}/register.sh" deregister
        break
        ;;
    *)
        help
        exit 1
        ;;
esac

